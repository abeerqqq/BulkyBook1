
@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<h1>Cover Types List</h1>
<br />

<a class="btn btn-primary" asp-area="Admin" asp-controller="CoverTypes" asp-action="Create"><i class="bi bi-plus"></i> &nbsp;Create New Cover Type</a>
<br />
<br />
<table class="table table-bordered table-striped" style="width=100%">
    <thead>
        <tr>
            <th>Cover Type Name</th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td style="width=50%"> @obj.Name</td>
                <td style="width=4%">
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-2" asp-controller="CoverTypes" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a class="btn btn-danger mx-0" asp-controller="CoverTypes" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash"></i> Delete</a>
                    </div>



                </td>
            </tr>
        }

    </tbody>
</table>

